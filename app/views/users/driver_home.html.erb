<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDTommQLmagc-sVra_yksEV9CEzzhDWEAc"></script>


<% if user_signed_in? %>
    <%= link_to "Log out", destroy_user_session_path, method: :delete %>
<% end %>

<%= form_tag load_car_path, method: :patch do %>
    <%= submit_tag "Load car" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Tracking Number</th>
      <th>Customer</th>
      <th>Street</th>
      <th>House Number</th>
      <th>Dimensions</th>
      <th>Coordinates</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% Delivery.where(status: 'On the way to the destination', driver_id: current_user.id).each do |delivery| %>
      <tr>
        <td><%= delivery.tracking_number %></td>
        <td><%= delivery.customer.email %></td>
        <td><%= delivery.street %></td>
        <td><%= delivery.house_number %></td>
        <td><%= delivery.height %> x <%= delivery.width %> x <%= delivery.depth %></td>
        <td><%= delivery.latitude %> x <%= delivery.longitude %>
        <td><%= delivery.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="map" style="height: 400px;"></div>

<script>
  // Initialize the map and pass it the div element and the coordinates of the first delivery
  var map = new google.maps.Map(document.getElementById('map'), {
    center: {lat: <%= Delivery.first.latitude %>, lng: <%= Delivery.first.longitude %>},
    zoom: 8
  });

  // Create a route on the map between the driver's current location and the first delivery
  var directionsService = new google.maps.DirectionsService();
  var directionsRenderer = new google.maps.DirectionsRenderer({map: map});
  var start = new google.maps.LatLng(<%= 53.209749 %>, <%= 6.530806 %>);
  var end = new google.maps.LatLng(<%= Delivery.first.latitude %>, <%= Delivery.first.longitude %>);
  var request = {
    origin: start,
    destination: end,
    travelMode: 'DRIVING'
  };
  directionsService.route(request, function(result, status) {
    if (status == 'OK') {
      directionsRenderer.setDirections(result);
    }
  });
</script>